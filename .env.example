# OKX DEX API Configuration
# Get your API credentials from: https://web3.okx.com/zh-hans/web3/build/docs/waas/rest-authentication
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_API_PASSPHRASE=your_okx_api_passphrase_here
OKX_PROJECT_ID=your_okx_project_id_here

# OKX DEX API Base URL
OKX_BASE_URL=https://web3.okx.com/api/v5/

# Default configuration
DEFAULT_EXCHANGE=binance
DEFAULT_TIMEFRAME=1h
DEFAULT_LIMIT=100

# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache configuration (optional)
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true

# Technical Analysis Configuration
DEFAULT_INDICATORS=sma,ema,rsi,macd,bb,stoch
SMA_PERIODS=20,50,200
EMA_PERIODS=12,26,50
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BB_PERIOD=20
BB_STD=2
STOCH_K=14
STOCH_D=3

# Error handling
MAX_RETRIES=3
RETRY_DELAY=1.0
TIMEOUT_SECONDS=30